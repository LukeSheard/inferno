{
  "name": "inferno-build",
  "private": true,
  "license": "MIT",
  "version": "4.0.0",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "bugs": {
    "url": "https://github.com/infernojs/inferno/issues"
  },
  "homepage": "https://github.com/infernojs/inferno#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/infernojs/inferno.git"
  },
  "scripts": {
    "clean:dist": "lerna exec -- rimraf dist",
    "build": "npm-run-all clean:dist build:**",
    "rollup": "lerna exec --concurrency 1 -- cross-env node ../../scripts/rollup/build.js",
    "build:es": "npm run rollup -- --format=es --optimize=false --name=index.es --uglify=false",
    "build:node": "npm run rollup -- --format=cjs --replace=false --name=index --uglify=false",
    "build:umd:dev": "npm run rollup",
    "build:umd:prod": "npm run rollup -- --env=production",
    "check-version": "node scripts/tasks/check-version.js",
    "postinstall": "lerna bootstrap",
    "lint": "tslint packages/*/src/**/*.ts packages/*/src/**/*.tsx packages/*/src/**/*.js packages/*/src/**/*.jsx",
    "test": "jest",
    "test:react": "jest --config fixtures/react-suite/jest.config.js",
    "test:package": "node fixtures/packaging/build-all.js",
    "test:publish": "coveralls < coverage/lcov.info",
    "uninstall": "lerna clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.22",
    "@types/react": "^15.0.25",
    "@types/react-dom": "^15.5.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-inferno": "^3.2.0",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-undefined-to-void": "^6.8.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concat-stream": "^1.6.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.0",
    "jest": "^20.0.4",
    "lerna": "^2.0.0-rc.5",
    "minimist": "^1.2.0",
    "most": "^1.4.0",
    "most-subject": "^5.3.0",
    "npm-run-all": "^4.0.2",
    "optimize-js": "^1.0.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-typescript2": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^2.3.2",
    "ts-jest": "^20.0.5",
    "tslint": "^5.2.0",
    "typescript": "^2.3.4",
    "union-type": "^0.4.0",
    "webpack": "^2.6.1"
  }
}
