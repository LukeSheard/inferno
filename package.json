{
  "name": "inferno-build",
  "private": true,
  "license": "MIT",
  "version": "3.1.2",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "bugs": {
    "url": "https://github.com/infernojs/inferno/issues"
  },
  "homepage": "https://github.com/infernojs/inferno#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/infernojs/inferno.git"
  },
  "scripts": {
    "lint": "tslint packages/*/src/**/*.ts packages/*/src/**/*.tsx packages/*/src/**/*.js packages/*/src/**/*.jsx",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.21",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-inferno": "^3.2.0",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-undefined-to-void": "^6.8.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^20.0.3",
    "lerna": "^2.0.0-rc.4",
    "lerna-changelog": "^0.4.0",
    "ts-jest": "^20.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "jest": {
    "projects": [
      "<rootDir>",
      "<rootDir>/packages/*"
    ],
    "moduleNameMapper": {
      "^inferno$": "<rootDir>/packages/inferno/src",
      "^inferno-component$": "<rootDir>/packages/inferno-component/src",
      "^inferno-shared$": "<rootDir>/packages/inferno-shared/src",
      "^inferno-vnode-flags$": "<rootDir>/packages/inferno-vnode-flags/src"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "**/packages/*/tests/**/*.spec.js?(x)",
      "**/packages/*/tests/**/*.spec.ts?(x)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
